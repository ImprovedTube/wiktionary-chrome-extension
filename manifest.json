{
  "manifest_version": 3,
  "name": "Wiktionary",
  "description": "Search words on Wiktionary",
  "version": "0.1.0",
  "icons": {
    "16": "icon/icon16.png",
    "32": "icon/icon32.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["define-selected-word.js"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": ["sidePanel", "contextMenus"]
}
